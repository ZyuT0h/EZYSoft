@page
@model EZYSoft.Pages.Verify2FAModel
@{
    ViewData["Title"] = "Verify 2FA Code";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Enter the 2FA Code</h1>
            <form method="post" id="verify2FAForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Input.Code">2FA Code</label>
                    <input type="text" asp-for="Input.Code" class="form-control" required />
                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Verify Code</button>
            </form>
        </div>
    </div>
</div>